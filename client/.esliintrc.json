{
  "extends": [
    "next",
    "next/core-web-vitals",
    "prettier",
    "eslint:recommended"
  ],
  "env": {
    "es6": true
  },
  "plugins": [
    "prettier"
  ],
  "rules": {
    "prettier/prettier": [
      "error"
    ],
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "key-spacing": [
      "error",
      {
        "beforeColon": false,
        "afterColon": true
      }
    ],
    "quotes": [
      "error",
      "single"
    ]
  },
  "overrides": [
    {
      "files": [
        "*.js"
      ],
      "rules": {
        "import/no-anonymous-default-export": "off"
      }
    }
  ]
}